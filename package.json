{
  "name": "notes",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "android:dev": "react-native run-android --variant=developmentDebug",
    "android:staging": "react-native run-android --variant=stagingDebug",
    "android:prod": "react-native run-android --variant=productionRelease",
    "ios:dev": "react-native run-ios --scheme 'Notes (Dev)'",
    "ios:staging": "react-native run-ios --scheme 'Notes (Staging)'",
    "ios:prod": "react-native run-ios --scheme 'Notes'",
    "build:android:dev": "cd android && ./gradlew assembleDevelopmentDebug",
    "build:android:staging": "cd android && ./gradlew assembleStagingDebug",
    "build:android:prod": "cd android && ./gradlew assembleProductionRelease",
    "build:ios:dev": "xcodebuild -workspace ios/Notes.xcworkspace -scheme 'Notes (Dev)' -configuration Debug",
    "build:ios:staging": "xcodebuild -workspace ios/Notes.xcworkspace -scheme 'Notes (Staging)' -configuration Debug",
    "build:ios:prod": "xcodebuild -workspace ios/Notes.xcworkspace -scheme 'Notes' -configuration Release"
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@realm/react": "^0.6.2",
    "moment": "^2.30.1",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-mmkv": "^2.11.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-vector-icons": "^10.0.3",
    "realm": "^12.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.19",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.3",
    "@react-native/typescript-config": "0.73.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.6",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-native-reanimated": "^3.6.1",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
